<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddNoteActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title=""
        app:titleTextAppearance="@style/CustomToolbarTitle"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:menu="@menu/toolbar_add_menu">
        <ImageButton
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/action_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_fav"
            android:layout_gravity="end"/>
        <ImageButton
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_delete"
            android:layout_gravity="end"/>
    </androidx.appcompat.widget.Toolbar>
    <EditText
        android:id="@+id/edt_title"
        android:hint="TÃ­tulo"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingVertical="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0B1215"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_title"/>
    <EditText
        android:id="@+id/edt_body"
        android:hint="Empiece a escribir"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="8dp"
        android:textColor="#0B1215"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/separator"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_body"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btn_pastel_1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/color_pastel_1"
            android:text=""
            android:shape="oval"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_pastel_2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/color_pastel_2"
            android:text=""
            android:shape="oval"
            android:gravity="center" />
        <Button
            android:id="@+id/btn_pastel_3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/color_pastel_3"
            android:text=""
            android:shape="oval"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:text="Guardar"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:paddingVertical="12dp"
        android:backgroundTint="#415A77"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>