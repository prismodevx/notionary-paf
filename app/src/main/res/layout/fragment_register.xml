<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.login.RegisterFragment">

    <ImageView
        android:id="@+id/img_register"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_register"/>

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_register"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2B2A57"
        android:text="Registro"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:id="@+id/txt_login_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_register"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#A0A0C7"
        android:text="Por favor registrate para continuar"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:textColorHint="#7A77A9"
        android:textColor="#2B2A57"
        android:hint="Nombre de usuario o email"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edt"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_sub"/>
    <EditText
        android:id="@+id/edt_fullname"
        android:layout_width="match_parent"
        android:textColorHint="#7A77A9"
        android:textColor="#2B2A57"
        android:textSize="16sp"
        android:hint="Nombres completos"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edt"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_username"/>
    <EditText
        android:id="@+id/edt_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:textColorHint="#7A77A9"
        android:textColor="#2B2A57"
        android:textSize="16sp"
        android:hint="Contraseña"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edt"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_fullname"/>
    <Button
        android:id="@+id/btn_register"
        android:text="Registrarme"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:paddingVertical="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/edt_password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btn_register">

        <TextView
            android:id="@+id/txt_login_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:textSize="16sp"
            android:textColor="#778DA9"
            android:text="¿Ya estás registrado? "/>
        <TextView
            android:id="@+id/btn_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#625BC3"
            android:text="Inicia sesión"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>